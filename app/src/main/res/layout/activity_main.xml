<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.valutop.face_detection.MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="368dp"
        android:layout_height="358dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/dummy" />

    <Button
        android:id="@+id/LoadBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detect"
        android:layout_centerHorizontal="true"
        android:text="Load" />

    <Button
        android:id="@+id/detect"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image"
        android:layout_marginTop="12dp"
        android:text="Detect" />

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LoadBtn"
        android:layout_alignBottom="@+id/LoadBtn"
        android:layout_alignParentStart="true"
        android:text="Take Photo"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="417dp" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/LoadBtn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
